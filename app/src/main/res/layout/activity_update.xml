<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdateActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/userNameUpdate_EditeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_name"
        android:layout_below="@+id/uiImage"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/userEmailUpdate_EditeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_email"
        android:layout_below="@+id/userName_EditeText"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmail_EditeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Update"/>




</LinearLayout>